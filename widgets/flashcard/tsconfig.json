{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node",
            "vitest/globals"
        ]
    },
    "include": [
        "__tests__/**/*.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}